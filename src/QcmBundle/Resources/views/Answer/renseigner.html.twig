{% extends '::base.html.twig' %}

{% block content %}
    {#<h1 class="page-header">Vous reponder au QCM {{ qcm.titre }}</h1>#}
    <div class="panel panel-default">
        <div class="panel-heading">QCM</div>
        <div class="panel-body">
            <form action="" method="post">
                <label for="name">Nom </label><input id="name" type="text" name="name" placeholder="Veuillez renseillez votre nom" class="form-control">
                {% for question in qcm %}
                    <div>
                       <h2  class="page-header">{{ question.question }}</h2>
                        {% for proposition in question.propositions %}
                        <ul class="list-group">
                            <li class="list-group-item">
                            <div class="checkbox">
                                <label><input type="checkbox" name="" value="">{{ proposition }}</label>
                            </div></li></ul>
                        {% endfor %}
                        <hr>
                        <hr>
                        <hr>
                    </div>
                {% endfor %}
                <button type="submit" class="btn btn-success btn-block">Valider</button>
            </form>
        </div>
    </div>

{% endblock %}

